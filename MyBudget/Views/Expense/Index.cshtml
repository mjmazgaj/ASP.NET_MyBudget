@model IEnumerable<MyBudget.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista wydatków</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary">Dodaj nowy wydatek</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameExp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueExp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.NameCat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameExp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueExp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.NameCat)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.IdExp }, new {@class= "btn btn-outline-secondary" })
                @Html.ActionLink("Szczegóły", "Details", new { id = item.IdExp }, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Usuń", "Delete", new { id = item.IdExp }, new { @class = "btn btn-outline-secondary" })
            </td>
        </tr>
        }
    </tbody>
</table>
